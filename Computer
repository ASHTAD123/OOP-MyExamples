// class logical contruct of an object 
// here the structure/prototype of object is created
class Computer {

	//variables (state of the object)
	String name;
	String model;
	String brand;
	String display;
	String motherboard;
	String processor;
	String processorType;
	String storageType;
	String batteryModel;
	String batteryType;
	
	String osName;
	
	int osVersion;
	int bootloaderVersion;
	int noOfPreloadedSoftwares;


	int modelNumber;
	int itemNumber;
	int numberOfParts;
	int noOfProcessor;
	int noOfCores;
	int sizeOfRam;
	int storageCapacity;
	int batteryCapacity;
	int warrantyPeriod;
	int noOfPorts;
	int moboModelNumber;
	int moboSerialNumber;
	int batterySerialNumber;
	
	boolean warranty;
	boolean gamingPc;
	boolean extendedRamSupport;
	boolean ssdSupport;
	boolean preloadedOS;
	boolean diskDriveSupport;
	boolean mDot3SddSupport;
	boolean webcampSupport;
	boolean windowsSupport;
	boolean msOfficeSupport;
	boolean antivirusSupport;

	
	//behaviour of an objects
	public void hardwareSpecifications(){};
	public void softwareSpecifications(){};
	public void powerOn(){};
	public void bootingProcess(){};
	public void intializingProcess(){};
	public void loginProcess(){};
	public void GuiStartup(){};
	public void settingUpPcForFirstUse(){}
	public void startingServicesProcess(){};
	public void backgroundProcess(){};
	public void foregroundProcess(){};
	public void desktopSetup(){};
	public void loadRequiredServices(){};
	public void sendingSignalPowerOff(){};
	public void waitingForProcesses(){};
	public void startingShutDownProcess(){};
	public void powerOff(){}
	public void loginMechanism(){}
}
